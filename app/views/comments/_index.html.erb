<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <p><%= link_to "コメントEdit", edit_blog_comment_path(blog, comment), remote: true %></p>
        <!-- Addendum -->
        <p><%= link_to "コメント削除", blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "Do you really want to delete this??"} %></p>
        <!-- So far -->
      </li>
    <% end %>
  <% end %>
</ul>
